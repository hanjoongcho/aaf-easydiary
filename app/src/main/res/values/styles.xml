<resources>
    <!-- aafactory-commons -->
    <!--<color name="colorPrimaryDark">#05868C</color>-->
    <!--<color name="colorPrimary">#07ABB3</color>-->
    <!--<color name="colorAccent">@color/colorPrimary</color>-->

    <!-- App Theme -->
    <style name="AppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fastScrollThumbDrawable">@drawable/ic_fast_scroll</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
    </style>
    <style name="AppTheme.NoActionBar.TransparentBackground">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fastScrollThumbDrawable">@drawable/ic_fast_scroll</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="AppCard.Timeline">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="AppCard.EditTitle">
        <item name="contentPaddingTop">5dp</item>
        <item name="contentPaddingBottom">5dp</item>
    </style>
    <style name="SettingsTitle">
        <item name="android:layout_marginBottom">@dimen/component_margin_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Additional App Theme -->
    <style name="AppTheme.Green_450" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/md_green_450</item>
        <item name="colorPrimaryDark">@color/md_green_450_dark</item>
        <item name="colorAccent">@color/md_green_450</item>
    </style>

    <!-- PostcardViewerActivity Theme -->
    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">25sp</item>
    </style>
    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>
    </style>

    <!--Layout Style-->
    <style name="linear_popup_menu_item">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="linear_lock_number_pad">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="relative_theme_container">
        <item name="layout_goneMarginTop">@dimen/medium_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_margin</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--App View Style-->
    <style name="recycler_fast_scroll">
        <item name="fastScrollAutoHide">true</item>
        <item name="fastScrollAutoHideDelay">1500</item>
        <item name="fastScrollEnableThumbInactiveColor">true</item>
        <item name="fastScrollPopupBgColor">?attr/colorAccent</item>
        <item name="fastScrollPopupPosition">adjacent</item>
        <item name="fastScrollPopupTextColor">@android:color/primary_text_dark</item>
        <item name="fastScrollPopupTextSize">15sp</item>
        <item name="fastScrollPopupBackgroundSize">45sp</item>
        <item name="fastScrollPopupTextVerticalAlignmentMode">font_metrics</item>
        <item name="fastScrollThumbColor">?attr/colorAccent</item>
        <item name="fastScrollThumbInactiveColor">?attr/colorAccent</item>
        <item name="fastScrollThumbEnabled">true</item>
        <item name="fastScrollTrackColor">#00000000</item>
    </style>
    <style name="text_custom_theme_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingStart">@dimen/medium_margin</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingEnd">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
    </style>
    <style name="image_custom_theme_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
        <item name="android:clickable">false</item>
        <item name="android:src">@drawable/ic_update</item>
    </style>
    <style name="image_custom_color_icon">
        <item name="android:layout_width">@dimen/color_sample_size</item>
        <item name="android:layout_height">@dimen/color_sample_size</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="image_custom_toolbar_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="image_popup_menu_icon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="text_lock_number_input">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_card_diary</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="text_lock_number_button">
        <item name="android:textColor">@color/pinLockText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_card_diary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="text_number_button">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/pinLockText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_circle">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_circle_filled</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>
    <style name="text_diary_main_item_inner_contents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/diary_card_text_padding</item>
    </style>
    <style name="text_diary_read_fragment_inner_contents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/diary_card_text_padding</item>
        <item name="android:textIsSelectable">true</item>
    </style>
    <style name="edit_diary_edit_inner_contents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/diary_card_text_padding</item>
    </style>
    <style name="text_dashboard_ranking">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10dp</item>
        <item name="android:background">@drawable/ic_star</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>
    <style name="text_dashboard_description">
        <item name="applyGlobalSize">false</item>
        <item name="applyGlobalColor">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/dashboard_text_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dashboard_description_margin</item>
        <item name="android:layout_marginEnd">@dimen/dashboard_description_margin</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
    <style name="card_dashboard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentPadding">@dimen/dashboard_card_padding</item>
        <item name="cardCornerRadius">@dimen/dashboard_card_radius</item>
        <item name="fixedAppcompatPadding">true</item>
        <item name="applyCardBackgroundColor">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="text_popup_menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="applyGlobalColor">true</item>
        <item name="applyGlobalSize">false</item>
    </style>
    <style name="text_option_animation">
        <item name="android:windowEnterAnimation">@anim/none</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="text_notification_h1">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_notification_contents">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DialogButton" />

    <!--Caldroid theme-->
    <style name="CaldroidDefaultGridView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:listSelector">@null</item>-->
        <!--<item name="android:background">@color/calendarBackground</item>-->
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>
    <style name="CaldroidDefaultCalendarViewLayout">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bg_card_diary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="CaldroidDefaultArrowButton">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
    </style>
    <style name="CaldroidDefaultLeftButton" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/ic_arrow_94_b</item>
    </style>
    <style name="CaldroidDefaultRightButton" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/ic_arrow_3_b</item>
    </style>
    <style name="CaldroidDefaultMonthNameLand">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--Showcase theme-->
    <style name="ShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/showCaseViewBackground</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
    </style>
    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#DEFFFFFF</item>
    </style>
</resources>
