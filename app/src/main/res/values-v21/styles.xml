<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--App View Style-->
    <style name="DialogButton" parent="@android:style/Widget.Material.Button.Borderless.Colored" />

    <style name="AppTheme.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/color_primary</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/baseline_access_time_24</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">2000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/AppTheme.AAF</item>
    </style>
</resources>