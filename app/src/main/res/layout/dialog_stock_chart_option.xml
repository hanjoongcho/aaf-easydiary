<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPaddingLeft="@dimen/dashboard_card_padding"
        app:contentPaddingRight="@dimen/dashboard_card_padding"
        >
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flex_toolbox"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:layout_constraintBottom_toTopOf="@+id/lineChart"
            app:layout_constraintTop_toBottomOf="@+id/image_expend_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radio_group_chart_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_button_option_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="KR/JP (Mix)" />

                <RadioButton
                    android:id="@+id/radio_button_option_a_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="KR/JP (KR/JP Only)" />

                <RadioButton
                    android:id="@+id/radio_button_option_a_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="KR/JP (Kospi Only)" />

                <RadioButton
                    android:id="@+id/radio_button_option_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="US" />

                <RadioButton
                    android:id="@+id/radio_button_option_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Total" />

            </RadioGroup>

            <CheckBox
                android:id="@+id/check_sync_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Sync" />

            <CheckBox
                android:id="@+id/check_draw_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Circle" />

            <CheckBox
                android:id="@+id/check_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Marker" />

            <CheckBox
                android:id="@+id/check_evaluate_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Evaluate Price" />

            <View
                android:background="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:layout_height="2dp" />

            <CheckBox
                android:id="@+id/check_principal_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Principal Highlight" />

        </com.google.android.flexbox.FlexboxLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>