<?xml version="1.0" encoding="utf-8"?>
<me.blog.korn123.easydiary.views.FixedCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card_dashboard_container">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <me.blog.korn123.easydiary.views.FixedTextView
            android:id="@+id/dashboard_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="D-Day (BETA)"
            android:textSize="@dimen/dashboard_title_h1"
            app:applyGlobalColor="true"
            app:applyGlobalSize="false"
            app:applyHighLight="false"
            app:layout_constraintEnd_toStartOf="@+id/image_d_day_sort_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/image_d_day_sort_order"
            android:src="@drawable/ic_sorting_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recycler_days"
            app:layout_constraintStart_toEndOf="@+id/dashboard_title"
            app:layout_constraintEnd_toStartOf="@+id/flexbox_option_container"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:padding="10dp"
            android:id="@+id/flexbox_option_container"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/image_d_day_sort_order"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recycler_days"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <me.blog.korn123.easydiary.views.FixedTextView
                android:textSize="@dimen/dashboard_text_medium"
                app:applyGlobalColor="true"
                app:applyGlobalSize="false"
                android:text="Flexbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/flexbox_option_switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</me.blog.korn123.easydiary.views.FixedCardView>
